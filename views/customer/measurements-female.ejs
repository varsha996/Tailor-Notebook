<!DOCTYPE html>
<html>
<head>
  <title>Select Female Outfit</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .outfit-container {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      justify-content: center;
      max-width: 800px;
      margin-bottom: 40px;
    }

    .outfit-option {
      border: 2px solid transparent;
      border-radius: 15px;
      cursor: pointer;
      padding: 10px;
      transition: 0.3s ease;
      width: 160px;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      align-items: center;
      user-select: none;
      text-align: center;
    }

    .outfit-option:hover {
      border-color: #888;
      transform: scale(1.05);
    }

    .outfit-option img {
      width: 160px;
      height: 160px;
      object-fit: contain;
      border-radius: 15px;
      margin-bottom: 10px;
      display: block;
    }

    .outfit-option p {
      margin: 0;
      font-weight: 600;
    }

    .selected {
      border-color: #e83e8c !important;
    }

    .buttons-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      width: 100%;
      max-width: 800px;
    }

    button, .back-button {
      padding: 10px 25px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      user-select: none;
      transition: background-color 0.3s ease;
      text-decoration: none;
      color: white;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    button {
      background-color: #e83e8c;
    }

    button:hover {
      background-color: #c2185b;
    }

    .back-button {
      background-color: #6c757d;
    }

    .back-button:hover {
      background-color: #5a6268;
    }
  </style>

  <script>
    function selectOutfit(imgBox, outfitType) {
      document.getElementById("outfitType").value = outfitType;

      const options = document.querySelectorAll(".outfit-option");
      options.forEach(opt => opt.classList.remove("selected"));
      imgBox.classList.add("selected");
    }

    function validateForm(e) {
      const outfit = document.getElementById("outfitType").value;
      if (!outfit) {
        alert("Please select an outfit before continuing.");
        e.preventDefault();
      }
    }
  </script>
</head>
<body>
  <h2>Select Outfit for Female</h2>

  <form action="/customer/customize" method="POST" onsubmit="validateForm(event)">
    <input type="hidden" name="gender" value="female">
    <input type="hidden" id="outfitType" name="outfitType" required>

    <div class="outfit-container">
      <div class="outfit-option" onclick="selectOutfit(this, 'blouse')">
        <img src="/images/blouse.jpg" alt="Blouse">
        <p>Blouse</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'dress')">
        <img src="/images/dress.jpg" alt="Dress">
        <p>Dress</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'lehenga')">
        <img src="/images/lehenga.jpg" alt="Lehenga">
        <p>Lehenga</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'saree')">
        <img src="/images/saree.jpg" alt="Saree">
        <p>Saree</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'salwar')">
        <img src="/images/salwar.jpg" alt="Salwar">
        <p>Salwar</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'gown')">
        <img src="/images/gown.jpg" alt="Gown">
        <p>Gown</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'coat')">
        <img src="/images/coat.jpg" alt="Coat">
        <p>Coat</p>
      </div>
    </div>

    <div class="buttons-container">
      <a href="/customer/measurements" class="back-button">Back</a>
      <button type="submit">Next</button>
    </div>
  </form>
</body>
</html>

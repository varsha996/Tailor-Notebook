<!DOCTYPE html>
<html>
<head>
  <title>Customize Outfit</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
      background-color: #f9f9f9;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      color: #333;
    }

    form {
      background: white;
      padding: 25px 30px;
      border-radius: 15px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 600px;
      box-sizing: border-box;
    }

    label {
      display: block;
      margin-top: 20px;
      font-weight: 600;
      color: #444;
    }

    select {
      width: 100%;
      padding: 10px;
      margin-top: 8px;
      border-radius: 8px;
      border: 1.5px solid #ccc;
      font-size: 16px;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    select:focus {
      outline: none;
      border-color: #007BFF;
    }

    .summary {
      text-align: center;
      margin-bottom: 25px;
      font-size: 18px;
      color: #555;
      font-weight: 600;
    }

    .buttons-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    button, .back-button {
      padding: 12px 30px;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      user-select: none;
      transition: background-color 0.3s ease;
      min-width: 120px;
      text-align: center;
    }

    button {
      background-color: #007BFF;
      color: white;
    }

    button:hover {
      background-color: #0056b3;
    }

    .back-button {
      background-color: #6c757d;
      color: white;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .back-button:hover {
      background-color: #5a6268;
    }
  </style>
</head>
<body>
  
  <h2>Customize Your Outfit</h2>

  <div class="summary">
    <p>Gender: <%= gender.charAt(0).toUpperCase() + gender.slice(1) %></p>
    <p>Outfit: <%= outfitType.charAt(0).toUpperCase() + outfitType.slice(1) %></p>
  </div>

  <form action="/customer/save-custom-outfit" method="POST">
    <input type="hidden" name="gender" value="<%= gender %>">
    <input type="hidden" name="outfitType" value="<%= outfitType %>">

    <label for="clothType">Select Cloth Type:</label>
    <select id="clothType" name="clothType" required>
      <option value="" disabled selected>Select cloth type</option>
      <option value="cotton">Cotton</option>
      <option value="linen">Linen</option>
      <option value="silk">Silk</option>
      <option value="wool">Wool</option>
      <option value="polyester">Polyester</option>
      <option value="velvet">Velvet</option>
      <option value="denim">Denim</option>
      <option value="rayon">Rayon</option>
      <option value="khadi">Khadi</option>
      <option value="poplin">Poplin</option>
    </select>

    <label for="color">Select Color:</label>
    <select id="color" name="color" required>
      <option value="" disabled selected>Select color</option>
      <option value="black">Black</option>
      <option value="white">White</option>
      <option value="blue">Blue</option>
      <option value="gray">Gray</option>
      <option value="brown">Brown</option>
      <option value="red">Red</option>
      <option value="lavendar">Lavendar</option>
      <option value="maroon">Maroon</option>
      <option value="green">Green</option>
      <option value="pink">Pink</option>
      <option value="yellow">Yellow</option>
      <option value="orange">Orange</option>
    </select>

    <label for="pattern">Select Pattern:</label>
    <select id="pattern" name="pattern" required>
      <option value="" disabled selected>Select pattern</option>
      <option value="plain">Plain</option>
      <option value="striped">Striped</option>
      <option value="checked">Checked</option>
      <option value="floral">Floral</option>
      <option value="paisley">Paisley</option>
      <option value="camouflage">Camouflage</option>
      <option value="abstract">Abstract</option>
      <option value="geometric">Geometric</option>
      <option value="colorblock">Color Block</option>
      <option value="ikat">Ikat</option>
      <option value="ajrakh">Ajrakh</option>
      <option value="jacquard">Jacquard</option>
      <option value="argyle">Argyle</option>
    </select>

    <div class="buttons-container">
      <a href="/customer/measurements/<%= gender %>" class="back-button">Back</a>
      <button type="submit">Save</button>
    </div>
  </form>

</body>
</html>

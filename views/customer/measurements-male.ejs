<!DOCTYPE html>
<html>
<head>
  <title>Select Male Outfit</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .outfit-container {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      justify-content: center;
      max-width: 800px;
      margin-bottom: 40px;
    }

    .outfit-option {
      border: 2px solid transparent;
      border-radius: 15px;
      cursor: pointer;
      padding: 10px;
      transition: 0.3s ease;
      width: 160px;
      box-sizing: border-box;
      
      /* Flex layout to center image and text vertically and horizontally */
      display: flex;
      flex-direction: column;
      align-items: center;
      user-select: none;
      text-align: center;
    }

    .outfit-option:hover {
      border-color: #888;
      transform: scale(1.05);
    }

    .outfit-option img {
      width: 160px;
      height: 160px;
      object-fit: contain;
      border-radius: 15px;
      margin-bottom: 10px;
      display: block;
    }

    .outfit-option p {
      margin: 0;
      font-weight: 600;
    }

    .selected {
      border-color: #007BFF !important;
    }

    .buttons-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      width: 100%;
      max-width: 800px;
    }

    button, .back-button {
      padding: 10px 25px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      user-select: none;
      transition: background-color 0.3s ease;
      text-decoration: none;
      color: white;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    button {
      background-color: #007BFF;
    }

    button:hover {
      background-color: #0056b3;
    }

    .back-button {
      background-color: #6c757d;
    }

    .back-button:hover {
      background-color: #5a6268;
    }
  </style>

  <script>
    function selectOutfit(imgBox, outfitType) {
      document.getElementById("outfitType").value = outfitType;

      const options = document.querySelectorAll(".outfit-option");
      options.forEach(opt => opt.classList.remove("selected"));
      imgBox.classList.add("selected");
    }

    function validateForm(e) {
      const outfit = document.getElementById("outfitType").value;
      if (!outfit) {
        alert("Please select an outfit before continuing.");
        e.preventDefault();
      }
    }
  </script>
</head>
<body>
  <h2>Select Outfit for Male</h2>

  <form action="/customer/customize" method="POST" onsubmit="validateForm(event)">
    <input type="hidden" name="gender" value="male">
    <input type="hidden" id="outfitType" name="outfitType" required>

    <div class="outfit-container">
      <div class="outfit-option" onclick="selectOutfit(this, 'pant')">
        <img src="/images/pant.jpg" alt="Pant">
        <p>Pant</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'full-sleeve-shirt')">
        <img src="/images/shirt.avif" alt="Full Sleeves Shirt">
        <p>Full Sleeves Shirt</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'half-sleeve-shirt')">
        <img src="/images/half.webp" alt="Half Sleeves Shirt">
        <p>Half Sleeves Shirt</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'suit')">
        <img src="/images/suit.avif" alt="Suit">
        <p>Suit</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'kurta')">
        <img src="/images/kurta.jpg" alt="Kurta">
        <p>Kurta</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'sherwani')">
        <img src="/images/sherwani.webp" alt="Sherwani">
        <p>Sherwani</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'blazer')">
        <img src="/images/blazer.jpg" alt="Blazer">
        <p>Blazer</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 'dhoti')">
        <img src="/images/dhothi.webp" alt="Dhoti">
        <p>Dhoti</p>
      </div>

      <div class="outfit-option" onclick="selectOutfit(this, 't-shirt')">
        <img src="/images/tshirt.jpg" alt="T-shirt">
        <p>T-shirt</p>
      </div>
    </div>

    <div class="buttons-container">
      <a href="/customer/measurements" class="back-button">Back</a>
      <button type="submit">Next</button>
    </div>
  </form>
</body>
</html>
